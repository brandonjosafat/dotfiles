# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    color_good = "#e67e22"
    color_degraded = "#2d2a26"
    color_bad = "#ff0000"
}

#order += "ipv6"
#order += "wireless _first_"
#order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "disk /"
#order += "load"
order += "memory"
order += "tztime local"

volume master {
    format = " ♪: %volume "
    format_muted = " 󰝟: muted (%volume) "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    
    # Configuración de umbrales
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = " 󰁹 %status %percentage" #%remaining
        low_threshold = 15
        threshold_type = percentage
        last_full_capacity = true
        integer_battery_capacity = true
}

disk "/" {
        format = " 󰗮 %percentage_used " #[Disk: %percentage_used] " #"%avail"
}

load {
        format = "  %1min"
}

memory {
        format = "  %percentage_used" # %used | %available
        threshold_degraded = "10%"
        format_degraded = " 󰍛 low: %available"  #MEMORY < %available
}

tztime local {
        format = "  %A, %Y-%m-%d %H:%M"
}

